<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

    <record id="view_supplierinvoice_update_product_supplierprice_form" model="ir.ui.view">
        <field name="model">supplierinvoice.update.product.supplierprice</field>
        <field name="arch" type="xml">
            <form string="Update supplier price of products">
                <separator string="List of products to update"/>
                <field name="wizard_line_ids">
                    <tree create="false" editable="0">
                        <field name="name" readonly="1"/>
                        <field name="current_price_unit" readonly="1"/>
                        <field name="new_price_unit"/>
                    </tree>
                </field>
                <footer>
                    <button name="update_product_supplierprice"
                            string="Confirm"
                            type="object"
                            class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    </data>
</openerp>
